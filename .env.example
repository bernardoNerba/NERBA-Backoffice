# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_KEY=your_super_secure_jwt_key_at_least_32_characters_long
JWT_EXPIRES_DAYS=7
JWT_ISSUER=http://your-server-ip:5001

# Client URLs - Direct Docker Access (when accessing containers directly)
CLIENT_URL=http://your-server-ip:4200
CLIENT_URL_HTTPS=https://your-server-ip:4200

# Client URLs - Nginx Reverse Proxy (when behind nginx on standard ports 80/443)
CLIENT_URL_PROXY=http://your-server-ip
CLIENT_URL_PROXY_HTTPS=https://your-server-ip

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=YourSecureAdminPassword123!

# PgAdmin Configuration
PGADMIN_PASSWORD=your_pgadmin_password

# Environment
ASPNETCORE_ENVIRONMENT=Production

# Example for production deployment:
# JWT_ISSUER=http://192.168.1.100:5001
# CLIENT_URL=http://192.168.1.100:4200
# CLIENT_URL_HTTPS=https://192.168.1.100:4200